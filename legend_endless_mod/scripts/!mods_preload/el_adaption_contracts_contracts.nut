                function start()
                {
                    local settlements = this.World.EntityManager.getSettlements();
                    local lowest_distance = 99999;
                    local best_location;
                    local myTile = this.Contract.m.Warcamp.getTile();

                    foreach( s in settlements )
                    {
                        foreach( l in s.getAttachedLocations() )
